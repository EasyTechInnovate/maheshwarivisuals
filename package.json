{
    "name": "node-react-mongo-js",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "npm run ci:all && concurrently -n SERVER,CLIENT -c green,cyan \"npm run dev:server\" \"npm run dev:client\"",
        "dev:client": "cd client && npm run dev",
        "dev:server": "cd server && npm run dev",
        "build": "npm run build:client && npm run build:server",
        "build:client": "cd client && npm run build",
        "build:server": "cd server && npm run build",
        "start": "cd server && npm start",
        "ci:all": "npm run ci:client && npm run ci:server",
    "ci:client": "cd client && npm i",
    "ci:server": "cd server && npm i",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix"
    },
    "author": "Manish",
    "license": "ISC",
    "lint-staged": {
        "*.{js,jsx}": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.32.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "3.6.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "concurrently": "^9.2.0",
        "react-icons": "^5.5.0"
    }
}
